<view class="content"><scroll-view class="menu-wrapper" style="{{('height:'+height+'px')}}" scroll-y><view ref="__r" data-ref="menuWrapper"><block a:for="{{goods}}" a:for-item="item" a:for-index="index" a:key="index"><view ref="__r" data-ref-in-for="menuList" data-event-opts="{{[['tap',[['select',[index]]]]]}}" class="{{((currentIndex==index)?'current':'')}}" style="position:relative;" onTap="__e"><view class="menu-item">{{item.name}}</view><block a:if="{{getAllCount>=item.count&&item.count>0}}"><text class="allcount">{{item.count}}</text></block></view></block></view></scroll-view><scroll-view class="foods-wrapper" style="{{('height:'+height+'px')}}" scroll-y scroll-top="{{foodSTop}}"><view ref="__r" data-ref="foodsWrapper"><block a:for="{{goods}}" a:for-item="item" a:for-index="i" a:key="i"><view ref="__r" data-ref-in-for="foodList" class="foods"><view class="food-title" style="background:#f3f5f7;">{{''+item.name+''}}</view><block a:for="{{item.foods}}" a:for-item="food" a:for-index="index" a:key="index"><view class="food"><image style="width:75px;height:75px;margin-top:6px;" src="{{food.img}}" mode></image><view class="food-info"><text style="font-size:15px;margin-top:2px;">{{food.name}}</text><text style="font-size:13px;margin:2px 0;">{{food.description}}</text><text style="font-size:13px;margin:2px 0 4px;">{{"月售"+food.sellCount}}</text><view class="food-btm" style="color:red;"><text class="food-price">{{"￥"+food.price}}</text><cartcontrol style="color:red;" vue-id="{{'8deb4120-1-'+i+'-'+index}}" food="{{food}}" data-event-opts="{{[['^add',[['addCart']]],['^dec',[['decreaseCart']]]]}}" onAdd="__e" onDec="__e" onVueInit="__l"></cartcontrol></view></view></view></block></view></block></view></scroll-view><shopcart vue-id="8deb4120-2" goods="{{goods}}" data-event-opts="{{[['^add',[['addCart']]],['^dec',[['decreaseCart']]],['^delAll',[['delAll']]]]}}" onAdd="__e" onDec="__e" onDelAll="__e" onVueInit="__l"></shopcart></view>